{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "without-tests",
            "cacheVariables": {
                "BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "with-tests",
            "cacheVariables": {
                "BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "no-deb",
            "cacheVariables": {
                "PACK_DEB": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        },
        {
            "name": "windows-visual-studio-vcpkg",
            "displayName": "Visual Studio",
            "description": "Configure with vcpkg toolchain and generate Visual Studio project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            }
        },
        {
            "name": "windows-visual-studio-vcpkg-without-tests",
            "displayName": "vcpkg without Tests",
            "inherits": [
                "windows-visual-studio-vcpkg",
                "no-deb",
                "without-tests"
            ]
        },
        {
            "name": "windows-visual-studio-vcpkg-with-tests",
            "displayName": "vcpkg with Tests",
            "inherits": [
                "windows-visual-studio-vcpkg",
                "no-deb",
                "with-tests"
            ]
        },
        {
            "name": "linux",
            "displayName": "Linux",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja"
        },
        {
            "name": "linux-without-tests",
            "displayName": "Linux without Tests",
            "inherits": [
                "linux",
                "no-deb",
                "without-tests"
            ]
        },
        {
            "name": "linux-with-tests",
            "displayName": "Linux with Tests",
            "inherits": [
                "linux",
                "no-deb",
                "with-tests"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug",
            "displayName": "Windows Build (Debug)",
            "configurePreset": "windows-visual-studio-vcpkg-with-tests",
            "configuration": "Debug"
        },
        {
            "name": "windows-release",
            "displayName": "Windows Build (Release)",
            "configurePreset": "windows-visual-studio-vcpkg-without-tests",
            "configuration": "Release"
        },
        {
            "name": "linux-debug",
            "configurePreset": "linux-with-tests",
            "displayName": "Linux Build (Debug)",
            "configuration": "Debug"
        },
        {
            "name": "linux-release",
            "displayName": "Linux Build (Release)",
            "configurePreset": "linux-without-tests",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "linux-tests",
            "displayName": "Linux Tests",
            "configurePreset": "linux-with-tests",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "window-tests",
            "displayName": "Windows Tests",
            "configurePreset": "windows-visual-studio-vcpkg-with-tests",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}