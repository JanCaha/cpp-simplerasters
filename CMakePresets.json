{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "without-tests",
            "hidden": true,
            "cacheVariables": {
                "BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "with-tests",
            "hidden": true,
            "cacheVariables": {
                "BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "no-deb",
            "hidden": true,
            "cacheVariables": {
                "PACK_DEB": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            }
        },
        {
            "name": "windows-visual-studio-vcpkg",
            "displayName": "Windows Visual Studio with VCPKG",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "installDir": "${sourceDir}/install",
            "generator": "Visual Studio 17 2022",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": [
                "vcpkg"
            ]
        },
        {
            "name": "windows-visual-studio-vcpkg-without-tests",
            "displayName": "Windows without Tests",
            "inherits": [
                "windows-visual-studio-vcpkg",
                "no-deb",
                "without-tests"
            ]
        },
        {
            "name": "windows-visual-studio-vcpkg-with-tests",
            "displayName": "Windows with Tests",
            "inherits": [
                "windows-visual-studio-vcpkg",
                "no-deb",
                "with-tests"
            ]
        },
        {
            "name": "linux",
            "displayName": "Linux",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-without-tests",
            "displayName": "Linux without Tests",
            "inherits": [
                "linux",
                "no-deb",
                "without-tests"
            ]
        },
        {
            "name": "linux-with-tests",
            "displayName": "Linux with Tests",
            "inherits": [
                "linux",
                "no-deb",
                "with-tests"
            ]
        },
        {
            "name": "linux-with-tests-vcpkg",
            "displayName": "Linux with Tests using VCPKG",
            "inherits": [
                "linux",
                "no-deb",
                "with-tests",
                "vcpkg"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug",
            "displayName": "Windows Build (Debug - include tests)",
            "configurePreset": "windows-visual-studio-vcpkg-with-tests",
            "configuration": "Debug"
        },
        {
            "name": "windows-release",
            "displayName": "Windows Build (Release)",
            "configurePreset": "windows-visual-studio-vcpkg-without-tests",
            "configuration": "Release",
            "targets": [
                "all",
                "install"
            ]
        },
        {
            "name": "linux-debug",
            "configurePreset": "linux-with-tests",
            "displayName": "Linux Build (Debug - include tests)",
            "configuration": "Debug"
        },
        {
            "name": "linux-debug-vcpkg",
            "configurePreset": "linux-with-tests-vcpkg",
            "displayName": "Linux Build VCPKG (Debug - include tests)",
            "configuration": "Debug"
        },
        {
            "name": "linux-release",
            "displayName": "Linux Build (Release)",
            "configurePreset": "linux-without-tests",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "linux-tests-vcpkg",
            "displayName": "Linux Tests VCPKG",
            "configurePreset": "linux-with-tests-vcpkg",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "linux-tests",
            "displayName": "Linux Tests",
            "configurePreset": "linux-with-tests",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "windows-tests",
            "displayName": "Windows Tests",
            "configurePreset": "windows-visual-studio-vcpkg-with-tests",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}