{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "visual-studio-multi-vcpkg",
            "displayName": "Visual Studio",
            "description": "Configure with vcpkg toolchain and generate Visual Studio project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                },
                "BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "PACK_DEB": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "visual-studio-vcpkg-debug",
            "configurePreset": "visual-studio-multi-vcpkg",
            "displayName": "Build (Debug)",
            "description": "Build with Visual Studio/vcpkg (Debug)",
            "configuration": "Debug"
        },
        {
            "name": "visual-studio-vcpkg-release",
            "configurePreset": "visual-studio-multi-vcpkg",
            "displayName": "Build (Release)",
            "description": "Build with Visual Studio/vcpkg (Release)",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "test-ninja-vcpkg",
            "configurePreset": "ninja-multi-vcpkg",
            "hidden": true
        },
        {
            "name": "test-debug",
            "description": "Test (Debug)",
            "displayName": "Test (Debug)",
            "configuration": "Debug",
            "inherits": [
                "test-ninja-vcpkg"
            ]
        },
        {
            "name": "test-release",
            "description": "Test (Release)",
            "displayName": "Test (Release)",
            "configuration": "Release",
            "inherits": [
                "test-ninja-vcpkg"
            ]
        }
    ]
}